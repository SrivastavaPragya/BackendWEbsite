<div class="container-fluid mt-5 about-style" id="contactid">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <h1 class="text-center main-heading">contact us</h1>
      <p class="text-center sub-heading">we will be happy to help you</p>
      <div class="row">


        <form action ="/contact" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" placeholder="Enter name" name="name">
          </div>
          <div class="form-group">
            <label for="email">Email address:</label>
            <input type="email" class="form-control" placeholder="Enter email" name="email">
          </div>
          <div class="form-group">
            <label for="phone">Phone No</label>
            <input type="tel" class="form-control" placeholder="Enter phone number" name="phone">
          </div>
          <div class="form-group mb-4">
            <label for="message">Message</label>
            <textarea class="form-control" placeholder="Enter your message" id="message" rows="2" name="message"></textarea>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

